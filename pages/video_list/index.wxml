<view id="affix" style="display:flex;font-size:26rpx;background:#fff;padding:30rpx 0;color:#04b00f;width:750rpx;{{menuFixed?'position:fixed;top:0;left:0;margin-top:0;z-index:9':''}}">
    <view style="flex: 1;text-align: center">筛选:</view>
    <picker style="flex: 2;text-align: center" class="option" bindchange="bindPickerChange" data-option="grade" range="{{options_grade}}" range-key="label">
        <view>
            {{options_grade[option_index.grade].label}}
            <image style="width: 20rpx;vertical-align:middle;" mode="widthFix" src="http://wenyuanjiaoyu-qiniu.yixsu.com/切图_185.png"></image>
        </view>
    </picker>
    <picker style="flex: 2;text-align: center" class="option" bindchange="bindPickerChange" data-option="subject" range="{{options_subject}}" range-key="label">
        <view>
            {{options_subject[option_index.subject].label}}
            <image style="width: 20rpx;vertical-align:middle;" mode="widthFix" src="http://wenyuanjiaoyu-qiniu.yixsu.com/切图_185.png"></image>
        </view>
    </picker>
</view>
<view style="margin-top: 30rpx;width:650rpx;height:207rpx;{{menuFixed?'':'display:none'}}">
</view>

<view style="height:70rpx;line-height:70rpx;font-size: 30rpx;">
    <div style="display: inline-block;vertical-align:middle;width: 10rpx;height: 40rpx;background:#12CE87;border-radius: 20rpx;margin:0 20rpx;"></div>
    <div style="display: inline-block">{{type=='buy'?'我购买的视频':'我收藏的视频'}}</div>
</view>

<view wx:for="{{news_list}}" wx:key="index" bindtap="goto_detail" data-id="{{item.id}}" data-item="{{item}}"  style="margin:0 20rpx;margin-top:20rpx;width:710rpx;border-radius: 10rpx;background: #fff;overflow: hidden">
    <view style="display: inline-block;width: 200rpx;vertical-align: top;padding: 20rpx">
        <image style="width: 200rpx;height: 160rpx;vertical-align:middle;" mode="scaleToFill" src="{{item.img}}"></image>
    </view>
    <view style="display: inline-block;width: 440rpx;font-size: 24rpx;padding: 20rpx 15rpx;">
        <view style="display: flex">
            <view style="flex: 5;font-size: 30rpx">{{item.title_short}}</view>
            <view style="flex: 3;display: flex">
                <view wx:if="{{!item.is_buy}}" style="padding: 4rpx 6rpx" class="btn">购买¥{{item.price}}/年</view>
                <view wx:if="{{item.is_buy}}" style="padding: 4rpx 6rpx;background: #999;color:#ffffff;border-radius: 10rpx;">已购买</view>
            </view>
        </view>
        <view style="margin-top: 20rpx;">
            {{item.desc_short}}
        </view>
        <view style="margin-top: 20rpx;">
            <view wx:for="{{item.grade}}" wx:for-item="i" wx:key="index" class="label">{{i.label}}</view>
            <view wx:for="{{item.knowledges}}" wx:for-item="i" wx:key="index" class="label">{{i.name}}</view>
        </view>

        <view wx:if="{{item.is_buy}}" style="font-size: 20rpx;color: #999;text-align: right">
            {{item.buy_expire_desc}}
        </view>
    </view>
</view>

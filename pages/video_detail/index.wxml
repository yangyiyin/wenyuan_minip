<view  class="container" style="background: #fff;height: 100%;overflow: hidden">
    <video bindplay="bindplay" bindwaiting="bindwaiting" autoplay="{{false}}" style="width: 100%;height: 100%;" src="{{video.url}}">

    </video>

    <view style="position: absolute;padding:20rpx;border-radius:10rpx;top:40%;left:50%;margin-left:-100rpx;width:200rpx;text-align:center;z-index: 10;color: #ffffff;background: #000000;opacity: 0.7" wx:if="{{loading}}">缓冲中...</view>
    <view style="position: absolute;top: 0;left: 0">
        <view style="margin:30rpx auto;">
            <view  wx:for="{{video.grade}}" class="label">
                <view style="position: relative;z-index: 1">{{item.label}}</view>
                <view style="border-radius: 10rpx;" class="bg"></view>
            </view>

            <view  wx:for="{{video.knowledges}}" class="label">
                <view style="position: relative;z-index: 1">{{item.name}}</view>
                <view style="border-radius: 10rpx;" class="bg"></view>
            </view>

        </view>
    </view>

    <view style="position: absolute;top: 20rpx;right: 20rpx;">
        <view bindtap="collect" style="padding: 20rpx;display: flex;line-height: 40rpx;position: relative">
            <image wx:if="{{video.is_collect!=1}}" style="position:relative;z-index:1;width: 40rpx;height:40rpx;vertical-align:middle;" mode="scaleToFill" src="../../assets/aixin.png"></image>
            <image wx:if="{{video.is_collect>0}}" style="position:relative;z-index:1;width:40rpx;height:40rpx;vertical-align: middle" mode="scaleToFill" src="../../assets/aixin2.png"></image>
            <view wx:if="{{video.is_collect!=1}}" style="position:relative;z-index:1;font-size: 40rpx;color: #ffffff;line-height: 40rpx;">收藏</view>
            <view wx:if="{{video.is_collect>0}}" style="position:relative;z-index:1;font-size: 40rpx;color: #f4ea2a;line-height: 40rpx;">收藏</view>

            <view style="border-radius: 40rpx;" class="bg"></view>
        </view>
    </view>
</view>
.item{
    padding: 30rpx;border-top: 1rpx solid #eee;width: 690rpx;background: #fff
}
.left{
    display: inline-block;font-size: 32rpx;
}
.right{
    display: inline-block;float: right;color: #999
}

.label{
    padding: 4rpx 10rpx;
    color: #ffffff;
    display: inline-block;
    vertical-align: middle;
    margin: 0 10rpx;
    font-size: 26rpx;
    position: relative;
}

.bg{
    position: absolute;
    background: #000000;
    opacity: 0.5;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
}